<%- include('partials/head') %>
</head>
<body>
  <%- include('partials/nav') %>
 <main class="container mx-auto bg-white shadow-lg rounded-2xl p-8 mt-10 max-w-2xl">
  <h2 class="text-4xl md:text-5xl text-gray-800 font-extrabold text-center mb-8">
    Here are our registered homes:
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
  <% registeredHome.forEach(home => { %>
    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <!-- Image -->
      <img 
        src="<%= home.photoUrl %>" 
        alt="<%= home.house %>" 
        class="w-full h-48 object-cover">
      
      <!-- Content -->
      <div class="p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-2"><%= home.house %></h3>
        
        <div class="flex items-center justify-between mb-3">
          <span class="text-gray-600 text-sm"><%= home.location %></span>
          <span class="text-yellow-500 flex items-center">
            ⭐ <%= home.rating %>
          </span>
        </div>

        <p class="text-gray-900 text-lg font-semibold mb-4">₹<%= home.price %> / night</p>
        
        <a href="/home/<%= home.id %>"
           class="block text-center bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
          View Details
        </a>
      </div>
    </div>
  <% }) %>
</div>

</main>

  
</body>
</html>